@model BabyStore.Models.Order
@using BabyStore.Views.Shared
@{
    ViewBag.Title = SiteResource.Review;
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Create","Orders")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-control-static">
  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row alert-info" style="text-align:center;">
            <div class="col-md-2"><label > @SiteResource.Item</label> </div>
            <div class="  col-md-2 "><label> @SiteResource.Quantity</label> </div>
            <div class=" col-md-2"><label> @SiteResource.UnitPrice</label> </div>
        </div>

        @foreach (var item in Model.OrderDetielss)
        {
            <div class="row body-content" style="text-align:center;">
                <div class="col-md-2"> @Html.DisplayFor(modelitem => item.Product.SubCategory.SubCategoryName)</div>
                <div class="col-md-2"> @Html.DisplayFor(modelitem => item.Quantity)</div>
                <div class="col-md-2"> @Html.DisplayFor(modelitem => item.UnitPrice)</div>

            </div>
        }
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.TotalPrice, htmlAttributes: new {@class ="control-label col-md-2" })
            <div class=" col-md-10 form-control-static"> 
                @Html.DisplayFor(model =>model.TotalPrice)
                @Html.HiddenFor(model =>model.TotalPrice)
            </div>
        </div>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeliveryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeliveryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeliveryName, "", new { @class = "text-danger" })
            </div>
        </div>

                @Html.EditorFor(model => model.DeliveryAddress)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@SiteResource.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
 }


<div>
    @Html.ActionLink(SiteResource.BackList, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
