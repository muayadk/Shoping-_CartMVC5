@model BabyStore.Models.Category

@using BabyStore.Views.Shared

@{
    ViewBag.Title =SiteResource.Deletes ;
}

<h2>@ViewBag.Title</h2>

<h3>@SiteResource.wantToDelete</h3>
<div>
    <h4>@SiteResource.Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
