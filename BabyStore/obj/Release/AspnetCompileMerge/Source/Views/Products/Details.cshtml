    }
    

            <div class="form-group">
                @SiteResource.Quantity
                <div class="form-horizontal">

                    @using (Html.BeginForm("AddToBasket", "Basket"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID)
                        @Html.DropDownList("Quantity", Enumerable.Range(1, 10).Select(s => new SelectListItem { Text = s.ToString(), Value = s.ToString() }))
                        <input type="submit" class="btn btn-default btn-xs" value="@SiteResource.AddToBasket" />

                    }
                </div>
            </div>
