@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@using BabyStore.Views.Shared
@{
    ViewBag.Title = SiteResource.Roles;
}
<h2>@ViewBag.Title</h2>
<p>
    @if(Request.IsAuthenticated && User.IsInRole("Admin"))
    { 
    @Html.ActionLink(SiteResource.Create, "Create", null, new {@class="btn btn-primary" })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               
                @Html.ActionLink(SiteResource.Edit, "Edit", new { id = item.Id }, new {@class="btn btn-primary" }) |
                @Html.ActionLink(SiteResource.detiles, "Details", new { id = item.Id }, new {@class="btn btn-primary" }) |
                @Html.ActionLink(SiteResource.Deletes, "Delete", new { id = item.Id }, new {@class="btn btn-primary" })
            </td>
        </tr>
    }
</table>

